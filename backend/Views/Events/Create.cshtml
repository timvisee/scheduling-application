@model backend.Models.Event

@{
    ViewData["Title"] = "New Event";
}

<h2>Create Event</h2>
<hr>

<div class="row">
    <div class="col-xs-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-xs-12 col-md-11">
                    <input asp-for="Title" class="form-control" placeholder="Title" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <input asp-for="Description" class="form-control" placeholder="Description" required />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-xs-6 col-md-12">
                    <input asp-for="Start" class="form-control" placeholder="Start date" datetimepicker required />
                    <span asp-validation-for="Start" class="text-danger"></span>
                </div>
                <div class="form-group col-xs-6 col-md-12">
                    <input asp-for="End" class="form-control" placeholder="End date" datetimepicker required />
                    <span asp-validation-for="End" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/datetimepicker.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
