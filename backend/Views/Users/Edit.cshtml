@using Type = backend.Types.Type
@using Role = backend.Types.Role
@model backend.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>
<hr/>
<p style="background-color: #f00; color: #fff; padding: 10px;">
    Should we edit users from this screen or do they need to edit their account on their own?
    <br />
    <a style="color: #fff; text-decoration: underline" asp-controller="Manage" asp-action="Index">Edit/create account</a>
</p>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-row">
        <div class="form-group col-12">
            <input asp-for="FirstName" class="form-control" placeholder="First Name" required />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <input asp-for="Infix" class="form-control" placeholder="Infix" />
            <span asp-validation-for="Infix" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <input asp-for="LastName" class="form-control" placeholder="Last Name" required />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <input asp-for="Locale" class="form-control" placeholder="Locale" />
            <span asp-validation-for="Locale" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="Type" class="control-label"></label>
            <select asp-for="Type" asp-items="Html.GetEnumSelectList<Type>()" class="form-control"></select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="Role" class="control-label"></label>
            <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" class="form-control"></select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <div class="checkbox">
                <label>
                    <input asp-for="Deleted" /> @Html.DisplayNameFor(model => model.Deleted)
                </label>
            </div>
        </div>
        <div class="form-group col-12">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-controller="People" asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
