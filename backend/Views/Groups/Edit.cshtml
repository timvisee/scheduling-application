@model GroupView

@{
    ViewData["Title"] = "Edit Group";
}

<div class="sa-container">
    <h2>Edit Group</h2>
    <hr/>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="group.Id"/>
        <div class="form-row">
            <div class="form-group col-12">
                <input asp-for="group.Name" class="form-control" placeholder="Name" required/>
                <span asp-validation-for="group.Name" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="@Model.People" class="control-label"></label>
                <select asp-for="@Model.SelectedPeople"
                        class="form-control"
                        asp-items="@Model.PeopleList">
                </select>
                <span asp-validation-for="@Model.SelectedPeople" class="text-danger"/>
            </div>
            <div class="form-group col-12">
                <input type="submit" value="Save" class="btn btn-primary"/>
                <a asp-controller="People" asp-action="Index" class="btn btn-light">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
