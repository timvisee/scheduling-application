@model backend.Models.Group

@{
    ViewData["Title"] = "New Group";
}

<h2>Create Group</h2>
<hr/>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-12">
            <input asp-for="Name" class="form-control" placeholder="Name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="People" class="control-label"></label>
            <select asp-for="People" asp-items="@ViewBag.People" class="form-control">
            </select>
        </div>
        <div class="form-group col-12">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-controller="People" asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
