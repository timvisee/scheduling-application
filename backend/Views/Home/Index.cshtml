@using System.Diagnostics
@using System.Runtime.InteropServices.ComTypes
@model IEnumerable<backend.Models.Event>

@{
    ViewData["Title"] = "Home";

    string [] colors =  new string[]{"text-success", "text-danger", "text-info", "text-primary", "text-warning"};
}

<div class="row sc-body p-5">
    <div class="col-lg-2">
    </div>

    @{
        var count = 0;
    }
    @foreach (var day in ViewData["week"] as List<List<Event>>)
    {
        <div class="col-lg-2">
            <div class="col-lg-12">
                <h4 class="text-center @colors[count]">@day[0].Start.DayOfWeek</h4>
            </div>

            @foreach (var eve in day)
            {
                <div class="card card-date m-1">
                    <div class="card-body">
                        <h6>@eve.Title</h6>
                        <hr>
                        <p>@eve.Start.TimeOfDay</p>
                    </div>
                    <i class="fa fa-question-circle card-info eventRequest" data-id="@(eve.Id)" data-toggle="modal" data-target="#detailModal"></i>
                </div>
            }
            @{count++;}
        </div>
    }
</div>

<div class="modal" id="detailModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="detail-title" class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="detail-description"></p>
                <p id="detail-start"></p>
                <p id="detail-end"></p>
            </div>
            <div class="modal-footer">
@*                <button type="button" class="btn btn-primary">Save changes</button>*@
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
