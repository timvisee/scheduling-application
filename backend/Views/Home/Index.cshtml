@using System.Diagnostics
@using System.Runtime.InteropServices.ComTypes
@model IEnumerable<backend.Models.Event>

@{
    ViewData["Title"] = "Home";

    string[] ColorNames =  new string[]{
        "text-success",
        "text-danger",
        "text-info",
        "text-primary",
        "text-warning",
        "text-success",
        "text-success"
    };
    string[] DayNames =  new string[]{
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday"
    };
}

<div class="row sc-body p-5">
    <div class="col-lg-2">
    </div>

    @for(var i = 0; i < 7; i++)
    {
        <div class="col-lg-2">
            <div class="col-lg-12">
                <h4 class="text-center @ColorNames[i]">@DayNames[i]</h4>
            </div>

            @foreach(var item in ViewBag.Days[i])
            {
                <div class="card card-date m-1">
                    <div class="card-body">
                        <h6>@item.Title</h6>
                        <hr>
                        <p>@item.Start.TimeOfDay</p>
                    </div>
                    <a asp-controller="Events" asp-action="Details"
                        asp-route-id="@item.Id"
                        class="card-info">
                        <i class="fa fa-question-circle"></i>
                    </a>
                    <i class="fa fa-question-circle card-info eventRequest" data-id="@(eve.Id)" data-toggle="modal" data-target="#detailModal"></i>
                </div>
            }

            @if(ViewBag.Days[i].Count == 0) {
                <div class="card card-date m-1">
                    <p>No events found</p>
                </div>
            }
        </div>
    }
</div>

<div class="modal" id="detailModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="detail-title" class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="detail-description"></p>
                <p id="detail-start"></p>
                <p id="detail-end"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
