@using System.Diagnostics
@using System.Runtime.InteropServices.ComTypes
@model IEnumerable<backend.Models.Event>

@{
    ViewData["Title"] = "Home";

    string[] ColorNames =  new string[]{
        "text-success",
        "text-danger",
        "text-info",
        "text-primary",
        "text-warning",
        "text-success",
        "text-success"
    };
    string[] DayNames =  new string[]{
        "Monday",
        "Dinsdag",
        "Woens",
        "Bliksemdag",
        "VRIJ",
        "Zaterdag",
        "Regendag"
    };
}

<div class="row sc-body p-5">
    <div class="col-lg-2">
    </div>

    @for(var i = 0; i < 7; i++)
    {
        <div class="col-lg-2">
            <div class="col-lg-12">
                <h4 class="text-center @ColorNames[i]">@DayNames[i]</h4>
            </div>

            @foreach(var item in ViewBag.Days[i])
            {
                <div class="card card-date m-1">
                    <div class="card-body">
                        <h6>@item.Title</h6>
                        <hr>
                        <p>@item.Start.TimeOfDay</p>
                    </div>
                    <a asp-controller="Events" asp-action="Details"
                        asp-route-id="@item.Id"
                        class="card-info">
                        <i class="fa fa-question-circle"></i>
                    </a>
                </div>
            }

            @if(ViewBag.Days[i].Count == 0) {
                <div class="card card-date m-1">
                    <i>NOPE</i>
                </div>
            }
        </div>
    }
</div>
