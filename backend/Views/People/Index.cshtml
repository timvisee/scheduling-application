@model IEnumerable<backend.Models.People>

@{
    ViewData["Title"] = "People Overview";
    List<User> removedUsers = new List<User>();
}

@section Stylesheets {
    <link rel="stylesheet" href="~/css/crud.css"/>
}

<h2>People Overview</h2>

<a asp-action="Create" asp-controller="Groups" class="btn btn-outline-success">New Group</a>
<a asp-action="Create" asp-controller="Users" class="btn btn-outline-info">New User</a>

<div class="row">
    <div class="col-md-6">
        <div class="table-responsive sc-body">
            <h2 class="text-center">Groups</h2>
            <table class="table">
                <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DisplayName)</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    if (item.GetType() == typeof(Group))
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-controller="Groups" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.DisplayName)
                                </a>

                            </td>
                            <td>
                                <a asp-action="Edit" asp-controller="Groups" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Delete" asp-controller="Groups" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6">
        <div class="table-responsive sc-body">
            <h2 class="text-center">Users</h2>
            <table class="table">
                <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DisplayName)</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    if (item.GetType() == typeof(User))
                    {
                        // First cast to user to use the deleted attribute
                        var item2 = (User) item;
                        if (item2.Deleted == false)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-controller="Users" asp-route-id="@item.Id">
                                        @Html.DisplayFor(modelItem => item.DisplayName)
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-controller="Users" asp-route-id="@item.Id">Edit</a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            removedUsers.Add(item2);
                        }
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="table-responsive sc-body">
            <h2 class="text-center">Removed users</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.DisplayName)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var removedUser in removedUsers)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-controller="Users" asp-route-id="@removedUser.Id">
                                @Html.DisplayFor(modelItem => removedUser.DisplayName)
                            </a>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Users" asp-route-id="@removedUser.Id">Edit</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
