@model IEnumerable<backend.Models.People>

@{
    ViewData["Title"] = "People Overview";
}

@section Stylesheets {
    <link rel="stylesheet" href="~/css/crud.css"/>
}

<h2>People Overview</h2>
<div class="row">
    <div class="col-md-6">
        <div class="table-responsive sc-body">
            <div class="bg-dark">
                <h2 class="pl-2 pt-2 pb-2 mb-0 text-white">
                    <i class="fas fa-users"></i>
                    &nbsp;Groups
                    <a asp-action="Create" asp-controller="Groups" class="btn btn-outline-primary mr-3 float-right">New</a>
                </h2>
            </div>
                <table class="table">
                <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DisplayName)</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    if (item.GetType() == typeof(Group))
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-controller="Groups" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.DisplayName)
                                </a>

                            </td>
                            <td>
                                <a asp-action="Edit" asp-controller="Groups" asp-route-id="@item.Id"><span class="badge badge-info">Edit</span></a> |
                                <a asp-action="Delete" asp-controller="Groups" asp-route-id="@item.Id"><span class="badge badge-danger">Delete</span></a>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6">
        <div class="table-responsive sc-body">
            <div class="bg-dark">
                <h2 class="pl-2 pt-2 pb-2 mb-0 text-white">
                    <i class="fas fa-user"></i>
                    &nbsp;Users
                    <a asp-action="Create" asp-controller="Users" class="btn btn-outline-primary mr-3 float-right">New</a>
                </h2>
            </div>
            <table class="table">
                <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DisplayName)</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    if (item.GetType() == typeof(User))
                    {
                         <tr>
                             <td>
                                 <a asp-action="Details" asp-controller="Users" asp-route-id="@item.Id">
                                     @Html.DisplayFor(modelItem => item.DisplayName)
                                 </a>
                             </td>
                             <td>
                                 <a asp-action="Edit" asp-controller="Users" asp-route-id="@item.Id"><span class="badge badge-info">Edit</span></a>
                                 <a asp-action="Delete" asp-controller="Users" asp-route-id="@item.Id"><span class="badge badge-danger">Delete</span></a>
                             </td>
                         </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
