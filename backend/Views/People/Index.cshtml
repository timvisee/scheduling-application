@model IEnumerable<backend.Models.People>

@{
    ViewData["Title"] = "People Overview";
}

@section Stylesheets {
    <link rel="stylesheet" href="~/css/crud.css" />
}

<h2>People Overview</h2>

<a asp-action="Create" asp-controller="Groups" class="btn btn-outline-success">New Group</a>
<a asp-action="Create" asp-controller="Users" class="btn btn-outline-success">New User</a>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.GetType().Name)</td>
                <td>@Html.DisplayFor(modelItem => item.DisplayName)</td>
                <td>
                    <a asp-controller="@(item.GetType().Name)s" asp-action="Details" asp-route-id="@item.Id">View</a> |
                    <a asp-controller="@(item.GetType().Name)s" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="@(item.GetType().Name)s" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
