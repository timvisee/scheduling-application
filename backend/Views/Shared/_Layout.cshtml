<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Scheduling Application | @ViewData["Title"]</title>

    <script src="~/js/fontawesome-all.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <environment include="Development">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Ubuntu:300,400,500,700">
        <link rel="stylesheet" href="~/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="~/css/jquery.datetimepicker.min.css"/>
        <link rel="stylesheet" href="~/css/site.css"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/jquery.datetimepicker.min.css"/>
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    @RenderSection("Stylesheets", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <span class="font-weight-bold">Scheduling</span><span class="font-weight-light">Application</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li><a class="nav-link" asp-controller="Events" asp-action="Index">Events</a></li>
                    <li><a class="nav-link" asp-controller="Locations" asp-action="Index">Locations</a></li>
                    <li><a class="nav-link" asp-controller="People" asp-action="Index">People</a></li>
                    <li><a class="nav-link" asp-controller="Manage" asp-action="Index">My Account</a></li>
                    @if (User.Identity.IsAuthenticated) {
                        <li><a class="nav-link" asp-controller="Account" asp-action="LogOut">Log off</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container pt-4">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Beun IT</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/jquery.datetimepicker.full.min.js"></script>
        <script src="~/js/popper.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/jquery.datetimepicker.full.min.js"></script>
        <script src="~/js/popper.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/site.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
